{
  "schemaVersion": 1,
  "id": "titlemod",
  "version": "1.0.0",
  "name": "Custom Title Screen Mod",
  "description": "Replaces the Minecraft title screen.",
  "authors": ["Swapnil"],
  "environment": "client",
  "entrypoints": {
    "main": [
      "com.swapnil.titlemod.TitleMod"
    ],
    "client": [
      "com.swapnil.titlemod.TitleMod"
    ]
  },
  "mixins": [
    "titlemod.mixins.json"
  ],
  "custom": {
    "loom": {
      "verbose": true
    },
    "mixin": {
      "verbose": true
    }
  },

  "depends": {
    "fabricloader": ">=0.15.11",
    "minecraft": "1.20.1",
    "java": ">=17"
  }
}
